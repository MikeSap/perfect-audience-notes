<div class="d-flex justify-content-center">
  <h1>Welcome to Perfect Audience Notes<% if @current_user.id != nil %><%= ", #{@current_user.username}"%><% end %>.</h1>
</div>

  <% if !flash[:alert].nil? %> 
  <div class= "d-flex justify-content-center alert alert-danger">
    <%= flash[:alert] %>
   </div>
  <% end %>

<div class="d-flex justify-content-center text-center">
  <%= form_for :user do |f| %>

  <%=f.label :username%><br>
  <%=f.text_field :username %><br>

  <%=f.label :password%><br>
  <%=f.password_field :password%><br>

  <br>
  <%=f.submit "Log In"%>
  <%end%>
</div>