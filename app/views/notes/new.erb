<h1> New Note </h1>

<% if !flash[:alert].nil? %> 
   <div class= "alert alert-danger">
   <%= flash[:alert] %>
   </div>
<% end %>

<%= form_for @note do |f| %>
    <%=f.label :title %><br>
    <%=f.text_field :title %><br>

    <%=f.label :content %><br>
    <%=f.text_field :content %><br>

    <%=f.submit "Submit"%>
<% end %>